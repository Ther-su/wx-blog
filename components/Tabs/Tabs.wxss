.tabs_title {
  display: flex;
  position: relative;
}
.title_item {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  padding: 15rpx 0;
  position: relative;
  background-color: #fff;
}
.title_item:after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1rpx;
  background-color: #e4e7ed;
}
.line {
  width: 50%;
  position: absolute;
  background-color: #06c261;
  border: #06c261 3rpx solid;
  bottom: 0;
  transition: all 0.3s ease;
  z-index: 10;
}