/* pages/author_detail/index.wxss */
page {
  background-color: #fff;
}
.top {
  height: 120rpx;
  display: flex;
  width: 90vw;
  align-items: center;
  justify-content: space-between;
}
.main {
  padding: 40rpx 30rpx;
}
.head_image_wrap {
  width: 100rpx;
  height: 100rpx;
}
.head_image_wrap image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.name {
  font-size: 40rpx;
}
.name_wrap {
  display: flex;
  align-items: center;
}
.info_wrap {
  display: flex;
  width: 50vw;
  justify-content: space-around;
}
.care_btn {
  background-color: #fa729a;
  width: 150rpx;
  height: 75rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-radius: 4px;
}
.has_care {
  background-color: #e6e6e6;
  color: #b2b2b2;
  width: 150rpx;
  height: 75rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-radius: 4px;
}